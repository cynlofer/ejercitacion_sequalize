<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200&display=swap" rel="stylesheet"> 
	<link rel="stylesheet" href="/stylesheets/style.css">
    
    <title>Document</title>
</head>

<!-- Header -->
<%- include('partials/Header') %>
<!-- /Header -->

<body>
    <form action="create"  method = 'POST'>
        <div class= 'titulo'>
            <h2>Crea tu pelicula</h2>

        </div>
            <div class= 'formulario'>
            <label for = 'title' >Título</label>
            <input type="text" name = 'title' placeholder = 'Título de la pelicula'>

            <label for = 'rating' >Rating</label>
            <input type="text" name = 'rating' placeholder = 'Rating de la pelicula'>

            <label for = 'awards' >Premios</label>
            <input type="text" name = 'awards' placeholder = 'Premios de la pelicula'>

            <label for = 'length' >Duración</label>
            <input type="text" name = 'length' placeholder = 'Duración de la pelicula'>

            <label for = 'release_date' >Fecha de estreno</label>
            <input type="date" name = 'release_date' placeholder = 'Fecha de estreno de la pelicula'>

            </div>

            <div class= 'genero_actores'>

            <label for = 'genre_id' >Genero</label>
          <select class= 'selector' name = 'genre_id'>
           <%generos.forEach(genero => {%>
        <option value = '<%= genero.id%>' ><%= genero.name %></option>
        <%})%>
          </select>

          <label for = 'name' >Actores</label>
          <select class= 'actor' name = 'actors'multiple >
            <%actores.forEach(actor => {%>
         <option value = '<%= actor.id%>' ><%= actor.first_name +' ' %><%= actor.last_name %></option>
         <%})%>
           </select>

    
    </div>
    <div class= 'botones'>
<button class= 'crear' type="submit" >Crear Película</button>

    </div>
    </form>
     <!-- Footer -->
    <%- include('partials/Footer') %>
    <!-- /Footer -->
</body>
</html>